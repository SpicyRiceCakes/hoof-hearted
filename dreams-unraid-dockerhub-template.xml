<?xml version="1.0"?>
<Container version="2">
  <Name>Hoof Hearted</Name>
  <Repository>nappuntokki/hoof-hearted:latest</Repository>
  <Registry>https://registry.hub.docker.com/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/SpicyRiceCakes/hoof-hearted</Support>
  <Project>https://github.com/SpicyRiceCakes/hoof-hearted</Project>
  <Overview>Lightweight home server monitoring application focused on real-time system monitoring and process identification. Built with Vue.js frontend and Python Flask backend for efficient resource tracking.</Overview>
  <Category>Tools:</Category>
  <WebUI>http://[IP]:[PORT:909]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/SpicyRiceCakes/hoof-hearted/main/dreams-unraid-dockerhub-template.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/walkxcode/dashboard-icons/main/png/horse.png</Icon>
  <ExtraParams>--restart=unless-stopped</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1735779600</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Branch>
    <Tag>latest</Tag>
    <TagDescription>Latest stable version</TagDescription>
  </Branch>
  <Branch>
    <Tag>v1.0.0</Tag>
    <TagDescription>Version 1.0.0 - Initial release</TagDescription>
  </Branch>
  <Requires/>
  <Config Name="Container Port" Target="8080" Default="909" Mode="tcp" Description="Web interface port for Hoof Hearted monitoring dashboard" Type="Port" Display="always" Required="true" Mask="false">909</Config>
  <Config Name="Data Path" Target="/data" Default="/mnt/user/appdata/hoof-hearted" Mode="rw" Description="Data storage location for monitoring logs and configuration" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/hoof-hearted</Config>
  <Config Name="FLASK_ENV" Target="FLASK_ENV" Default="production" Mode="" Description="Flask environment" Type="Variable" Display="advanced" Required="false" Mask="false">production</Config>
</Container>